<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context="com.matsavx.vkrtest.fragments.HomeFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="Здравствуйте!"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="376dp"
        android:layout_height="336dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="69dp"
        android:text="Вас приветствует приложение для мониторинга актуального состояния автодорог. Приложение может использоваться как обычный навигатор по местности. Приложение использует датчики, установленные в Вашем смартфоне, такие как GPS, акселерометр и гироскоп. Так же приложение мжет запросить разрешение об использовании внутреннего накопителя. Всё это нужно для составления карты неровностей на Вашем смартфоне. Пользуйтесь в удовольствие!"
        android:textAlignment="textStart"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="224dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:text="Используйте эту кнопку для включения режима считывания дорожных дефектов"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:text="Нажмите на эту кнопку, когда убедитесь, что смарфон закреплен в надёжном положении"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="230dp"
        android:src="@drawable/sensor_button" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="130dp"
        android:src="@drawable/calibrate_btn" />

</RelativeLayout>